<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_item_background"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/reminderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder Text"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reminderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Jul 2025 21:56:00"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingEnd="4dp"
        android:paddingStart="4dp">

        <ImageView
            android:id="@+id/expiredIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notification_off"
            android:contentDescription="Expired"
            android:visibility="gone"
            app:tint="#FF0000"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp" />

        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="6dp"
            android:contentDescription="Delete Reminder"
            android:src="@android:drawable/ic_menu_delete"
            android:scaleType="centerInside"
            app:tint="@android:color/holo_red_dark"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>
